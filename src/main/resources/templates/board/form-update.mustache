{{>layout/header}}

    <div class="container">
        <div class="page-header">
            <h1>게시글 수정</h1>
        </div>
        <br/>

        <input id="board_idx" type="hidden" value="{{board.idx}}"/>
        <table class="table">
            <tr>
                <th style="padding:13px 0 0 15px;">제목</th>
                <td><input id="board_title" type="text" class="col-md-8 form-control input-sm" value="{{board.title}}"></td>
            </tr>
            <tr>
                <th style="padding:13px 0 0 15px;">내용</th>
                <td><textarea id="board_content" class="col-md-8 form-control input-sm" maxlength="140" rows="7" style="height: 200px;">
                    {{board.content}}</textarea><span class="help-block"></span>
                </td>
            </tr>
        </table>
        <div class="pull-left">
            <a href="/board/list" class="btn btn-default">목록으로</a>
        </div>
        <div class="pull-right">
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-primary" id="btn-update">수정</button>
            <button type="button" class="btn btn-primary" id="btn-delete">삭제</button>

        </div>
    </div>


{{>layout/footer}}